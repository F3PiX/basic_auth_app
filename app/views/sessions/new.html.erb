<!--<h1>Log in</h1>-->

<%= form_tag sessions_path do %>
  <div class="field">
    <span>
   <%= label_tag :email %></span>
   <%= email_field_tag :email, params[:email], autofocus: true %>
  </div>
  <div class="field">
    <span><%= label_tag :password, "Wachtwoord" %></span>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Inloggen", class: 'button' %>
  </div>
<% end %>