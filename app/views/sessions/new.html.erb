<!--<h1>Log in</h1>-->
<% content_for :title do %> Inloggen <% end %>

<%= form_tag sessions_path do %>
  <div class="loginfield">

    <div id="label">
    <%= label_tag :email %></div>
   <%= email_field_tag :email, params[:email], autofocus: true %>
  </div>
  <div class="loginfield">
    <div id="label"><%= label_tag :password, "Wachtwoord" %></div>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Inloggen", class: "button tiny" %>
  </div>
<% end %>