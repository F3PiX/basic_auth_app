<!DOCTYPE html>
<html>
  <head>
    <title>BasicAuthApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="user_header">
        <% if current_user %>
          Ingelogd als <%= current_user.email %>
            <%= link_to "log uit", logout_path %>
        <% else %>
          <%= link_to "Meld je aan", aanmelden_path %> of
          <%= link_to "log in", inloggen_path %>
        <% end %>
      </div>

      <% flash.each do |name, message| %>
        <%= content_tag :div, message, id: "flash#{name}" %>
      <% end %>

      <%= yield %>

    </div>
</body>
</html>